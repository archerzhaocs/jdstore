<div class="row">
  <div class="col-md-12">

    <h2> 订单明细(<%= render_order_paid_state(@order) %>) </h2>

    <%= render "admin/orders/state_option", order: @order %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="%80%">保险名称</th>
          <th>价格</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td><%= @product_list.product_name %></td>
            <td><%= @product_list.product_price %></td>
          </tr>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= @order.total %> CNY
      </span>
    </div>

    <hr>

    <h2> 投保信息 </h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr><td>投保人</td></tr>
        <tr><td><%= @order.billing_name %></td></tr>
        <tr><td>被保险人</td></tr>
        <tr><td><%= @order.assured %></td></tr>
      </tbody>
    </table>

  </div>
</div>
