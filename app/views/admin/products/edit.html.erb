<h1> Edit product </h1>

<%= simple_form_for [:admin, @product] do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :quantity %>
  <img src=<%= @product.image %> style="width:100px; height:100px;"</img>
  <%= f.input :image %>

  <%= f.submit "Submit" %>
<% end %>
